{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://policy-as-code.fi/schemas/DecisionFunctionSpec/v1.0.json",
  "title": "Decision Function Specification",
  "description": "Formal specification for Policy as Code decision functions with legal compliance and audit requirements",
  "version": "1.0.0",
  "type": "object",
  "required": [
    "function_id",
    "version",
    "function_type",
    "legal_references",
    "input_schema",
    "output_schema",
    "metadata"
  ],
  "properties": {
    "function_id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*[a-z0-9]$",
      "description": "Unique identifier for the decision function",
      "examples": ["loan_eligibility", "benefit_calculation", "tax_assessment"]
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the decision function",
      "examples": ["1.0.0", "2.1.3", "1.2.0"]
    },
    "function_type": {
      "type": "string",
      "enum": ["python", "dsl", "hybrid"],
      "description": "Type of decision function implementation"
    },
    "legal_references": {
      "type": "array",
      "minItems": 1,
      "description": "Required legal references for compliance",
      "items": {
        "$ref": "#/definitions/LegalReference"
      }
    },
    "input_schema": {
      "type": "object",
      "description": "JSON Schema for function input validation",
      "additionalProperties": true
    },
    "output_schema": {
      "type": "object",
      "description": "JSON Schema for function output validation",
      "additionalProperties": true
    },
    "metadata": {
      "type": "object",
      "required": ["title", "description", "owner", "reviewer"],
      "properties": {
        "title": {
          "type": "string",
          "description": "Human-readable title"
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the function"
        },
        "owner": {
          "type": "string",
          "description": "Function owner identifier"
        },
        "reviewer": {
          "type": "string",
          "description": "Function reviewer identifier"
        },
        "tags": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Categorization tags"
        },
        "risk_level": {
          "type": "string",
          "enum": ["LOW", "MEDIUM", "HIGH", "CRITICAL"],
          "description": "Risk assessment level"
        },
        "retention_period_days": {
          "type": "integer",
          "minimum": 1,
          "description": "Data retention period in days"
        }
      }
    },
    "explain": {
      "type": "object",
      "description": "Explanation and redaction configuration",
      "properties": {
        "allow_fields": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Fields allowed in explanations (deny by default)"
        },
        "redact_fields": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Fields to redact in explanations"
        },
        "explanation_template": {
          "type": "string",
          "description": "Template for human-readable explanations"
        }
      }
    },
    "security": {
      "type": "object",
      "description": "Security and access control configuration",
      "properties": {
        "required_capabilities": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Required capabilities for execution"
        },
        "allowed_callers": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Allowed caller identifiers"
        },
        "rate_limit": {
          "type": "object",
          "properties": {
            "requests_per_minute": {"type": "integer"},
            "burst_size": {"type": "integer"}
          }
        }
      }
    },
    "function_code": {
      "type": "string",
      "description": "Base64-encoded function code"
    },
    "dependencies": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Required dependencies"
    },
    "tests": {
      "type": "array",
      "description": "Test cases for validation",
      "items": {
        "type": "object",
        "required": ["name", "input", "expected_output"],
        "properties": {
          "name": {"type": "string"},
          "input": {"type": "object"},
          "expected_output": {"type": "object"},
          "description": {"type": "string"}
        }
      }
    }
  },
  "definitions": {
    "LegalReference": {
      "type": "object",
      "required": ["iri", "title", "jurisdiction"],
      "properties": {
        "iri": {
          "type": "string",
          "format": "uri",
          "description": "Validated IRI (Finlex/EUR-Lex)"
        },
        "title": {
          "type": "string",
          "description": "Human-readable legal reference title"
        },
        "jurisdiction": {
          "type": "string",
          "enum": ["FI", "EU", "INTERNATIONAL"],
          "description": "Legal jurisdiction"
        },
        "section": {
          "type": "string",
          "description": "Specific section or article"
        },
        "subsection": {
          "type": "string",
          "description": "Subsection or paragraph"
        },
        "effective_date": {
          "type": "string",
          "format": "date",
          "description": "When the law became effective"
        },
        "last_updated": {
          "type": "string",
          "format": "date",
          "description": "Last update to the law"
        }
      }
    }
  },
  "additionalProperties": false
}

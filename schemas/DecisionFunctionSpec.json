{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DecisionFunctionSpec",
  "description": "Specification for Policy as Code Decision Functions",
  "version": "1.0.0",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[A-Z0-9._-]+$",
      "description": "Decision function identifier (e.g., MSSA.BENEFIT_23_4)"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the function"
    },
    "status": {
      "type": "string",
      "enum": [
        "DRAFT",
        "REVIEW",
        "ACTIVE",
        "RETIRED"
      ],
      "description": "Release status of the function"
    },
    "law_reference": {
      "type": "object",
      "properties": {
        "eli": {
          "type": "string",
          "format": "uri",
          "pattern": "^https://finlex\\.fi/eli/"
        }
      },
      "required": [
        "eli"
      ],
      "description": "Required legal reference (ELI URI)"
    },
    "owner": {
      "type": "object",
      "properties": {
        "ministry_id": {
          "type": "string",
          "enum": [
            "STM",
            "VM",
            "TEM",
            "OKM",
            "STM"
          ],
          "description": "Ministry identifier"
        },
        "unit": {
          "type": "string",
          "description": "Unit within ministry (e.g., Kela)"
        }
      },
      "required": [
        "ministry_id",
        "unit"
      ],
      "description": "Function owner information"
    },
    "inputs_schema_ref": {
      "type": "string",
      "pattern": "^urn:schema:",
      "description": "Reference to input schema (e.g., urn:schema:eligibility_input:v1)"
    },
    "outputs_schema_ref": {
      "type": "string",
      "pattern": "^urn:schema:",
      "description": "Reference to output schema (e.g., urn:schema:eligibility_output:v1)"
    },
    "logic_hash": {
      "type": "string",
      "pattern": "^sha256:",
      "description": "SHA-256 hash of the decision logic"
    },
    "invariants": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Invariant constraints (e.g., output.decision in ['APPROVED','DENIED'])"
    },
    "explain_allow_fields": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Fields allowed in explanations (privacy by spec)"
    },
    "signatures": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "kid": {
            "type": "string",
            "description": "KMS key ID"
          },
          "role": {
            "type": "string",
            "enum": [
              "owner",
              "reviewer"
            ],
            "description": "Signer role"
          },
          "sig": {
            "type": "string",
            "description": "Digital signature"
          }
        },
        "required": [
          "kid",
          "role",
          "sig"
        ]
      },
      "minItems": 2,
      "description": "Required signatures for release"
    },
    "explain": {
      "type": "object",
      "properties": {
        "allow_fields": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Fields allowed in explanations (privacy by spec)"
        },
        "redaction_policy": {
          "type": "string",
          "enum": [
            "strict",
            "moderate",
            "permissive"
          ],
          "description": "Default redaction level"
        }
      },
      "required": [
        "allow_fields",
        "redaction_policy"
      ]
    },
    "constraints": {
      "type": "object",
      "properties": {
        "deterministic": {
          "type": "boolean",
          "description": "Function must be deterministic"
        },
        "no_io": {
          "type": "boolean",
          "description": "Function cannot perform I/O operations"
        },
        "no_randomness": {
          "type": "boolean",
          "description": "Function cannot use random values"
        },
        "max_execution_time_ms": {
          "type": "integer",
          "minimum": 1,
          "maximum": 30000,
          "description": "Maximum execution time in milliseconds"
        }
      },
      "required": [
        "deterministic",
        "no_io",
        "no_randomness",
        "max_execution_time_ms"
      ]
    },
    "release": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "draft",
            "pending",
            "approved",
            "active",
            "deprecated"
          ],
          "description": "Release status"
        },
        "signatures": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "kid": {
                "type": "string",
                "description": "KMS key ID"
              },
              "role": {
                "type": "string",
                "enum": [
                  "owner",
                  "reviewer"
                ],
                "description": "Signer role"
              },
              "sig": {
                "type": "string",
                "description": "Digital signature"
              },
              "timestamp": {
                "type": "string",
                "format": "date-time",
                "description": "Signature timestamp"
              }
            },
            "required": [
              "kid",
              "role",
              "sig"
            ]
          },
          "description": "Required signatures for release"
        },
        "change_summary": {
          "type": "string",
          "description": "Summary of changes in this release"
        }
      },
      "required": [
        "status",
        "signatures",
        "change_summary"
      ]
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "owner": {
          "type": "string",
          "description": "Function owner"
        },
        "reviewers": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Authorized reviewers"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Function tags for categorization"
        }
      }
    }
  },
  "required": [
    "id",
    "version",
    "status",
    "law_reference",
    "owner",
    "inputs_schema_ref",
    "outputs_schema_ref",
    "logic_hash",
    "signatures",
    "explain_allow_fields",
    "invariants"
  ],
  "additionalProperties": false
}
